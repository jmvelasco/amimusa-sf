{% extends 'base.html.twig' %}

{% block body %}
<div id="container">
    <div class="back-link">
        <a href="{{ path('homepage') }}">Cerrar</a>
        <img src="/img/delete30.png" alt="cerrar">
    </div>
    <ul class="bxslider">
    {% for p in publications %}
            <li>
                <p class="edit-link">
                    <a href="{{ path('edit-writting', {'idWritting': p.idWritting.title}) }}">Editar</a>
                </p>
                {% for m in p.idMusa %}
                <h2>{{ m.name }}</h2>
                {% endfor %}

                <h1>{{ p.idWritting.title }}</h1>
                <div class="writtingWrapper">
                <p>{{ p.idWritting.body | raw }}</p>
                </div>

            </li>
    {% endfor %}
    </ul>
</div>
{% endblock %}

{% block javascripts %}
    <!-- jQuery library (served from Google) -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <!-- bxSlider Javascript file -->
    <script src="/assets/bxslider/jquery.bxslider.min.js"></script>
    <script type="application/javascript">
        $(document).ready(function(){
            $('.bxslider').bxSlider({pager:false});

            var $bxsliderContainer = $('.bx-wrapper .bx-viewport');
            $bxsliderContainer.css('background-color', '#F4F4F4');
            $bxsliderContainer.css('text-align', 'center');

            var $writting = $('.bxslider .writtingWrapper');
            $writting.css('background-repeat', 'no-repeat');
            $writting.css('background-position', 'center');

            $(window).trigger('resize');

        });

    </script>
{% endblock %}
{% block stylesheets %}
        <!-- bxSlider CSS file -->
    <link href="/assets/bxslider/jquery.bxslider.css" rel="stylesheet" />
    <style type="text/css">
        #container {
            margin: auto;
            width: 1366px;
        }
        .bxslider h2 {
            font-family: 'Walter Turncoat', cursive;
            color: #5454FF;
            text-shadow: 0px 2px 2px #4d4d4d;
            clear: both;
            font-size: 2em;
        }
        .bxslider h1 {
            font-family: 'Poiret One', cursive;
            color: #d2d2d2;
            text-shadow: 0px 2px 2px #4d4d4d;
            clear: both;
        }
        .bxslider .writtingWrapper {
            font-family: 'Architects Daughter', cursive;
            font-size: 22px;
            color: #2d2d2d;
        }
        .bx-wrapper .bx-viewport {
            background: rgba(255,255,255,0.2) !important;
            border: 2px solid rgba(255,255,255,0.2) !important;

        }
        div.back-link {
            font-size: 1em;
            margin-right: 1em;
            margin-bottom: 0.8em;
            text-align: right;

        }
        .back-link a {
            text-decoration: none;
            display: inline-block;
            font-family: "Arial Black", Gadget, sans-serif;
            color: #d2d2d2;
            text-shadow: 0px 2px 2px #4d4d4d;
        }
        .back-link img {
            vertical-align: middle;
        }
        p.edit-link {
            font-size: 18px;
            display: block;
            text-align: right;
            margin-left: 3em;
            background-image: none !important;
            float: left;
            background-color: #969696;
            padding: 1px 10px;
            border-radius: 25px;

        }
        .edit-link a {
            text-decoration: none;
            display: inline-block;
            font-family: "Arial Black", Gadget, sans-serif;
            color: #d2d2d2;
            text-shadow: 0px 2px 2px #4d4d4d;
        }
    </style>
{% endblock %}
